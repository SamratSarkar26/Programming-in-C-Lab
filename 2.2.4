    // write your code here
    strcpy (result, str1);
	strcat (result, str2);
    
}

// Function to find occurrence of substring in the main string
int findSubstring(char mainStr[], char subStr[]) {
    // write your code here
    char *ptr = strstr(mainStr, subStr);
	if (ptr != NULL) {
		return ptr - mainStr;
	} else {
		return -1;
	
    
}

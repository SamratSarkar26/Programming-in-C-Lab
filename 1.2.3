// Program to find roots and nature of a quadratic equation
#include <stdio.h>  //For printf() and scanf()
#include <math.h>  //For sqrt() function

int main() {
	float a, b, c;
	float discriminant, realPart, imaginaryPart, root1, root2;

	printf("Enter coefficients a, b and c: ");
	scanf("%f %f %f", &a, &b, &c);

	discriminant = (b * b) - (4 * a * c);

	if (discriminant > 0) {

		root1 = (-b + sqrt(discriminant)) / (2 * a);
		root2 = (-b - sqrt(discriminant)) / (2 * a);
		printf("root1 = %.2f and root2 = %.2f\n", root1, root2);
	}

	else if (discriminant == 0) {

		root1 = root2 = -b / (2 * a);
		printf("root1 = root2 = %.2f\n", root1);
	}
	else {
		realPart = -b / (2 * a);
		imaginaryPart = sqrt(-discriminant) / (2 * a);
		printf("root1 = %.2f+%.2fi and root2 = %.2f-%.2fi\n", realPart, imaginaryPart, realPart, imaginaryPart);
		
	}
	return 0;
}




